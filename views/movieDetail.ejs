<script>
const styleElem = document.head.appendChild(document.createElement("style"));
styleElem.innerHTML = ".movie-detail-backdrop:before {background-image:url('https://image.tmdb.org/t/p/w1280<%= movie.backdrop %>')}";
</script>

<div  class="movie-detail-backdrop">
  <div class="movie-detail">
      <div class="movie-detail__poster">
          <img class="movie-detail__poster-img" src="https://image.tmdb.org/t/p/w342<%= movie.poster %>"/>
      </div>
      <div class="movie-detail__content">
        <img class="movie-detail__poster-small" src="https://image.tmdb.org/t/p/w185<%= movie.poster %>"/>
        <h1><%= movie.title %></h1>
        <p><%= movie.description %></p>
        <div class="movie-detail__info">
          <div class="movie-detail__info-item">
            <h2>Gatunek</h2>
            <p>
              <% movie.genres.forEach((genre)=>{%>
              <%= genre.name  %>
              <% });%>
            </p>
          </div>
          <div class="movie-detail__info-item">
            <h2>Premiera</h2>
            <p><%= movie.releaseDate %></p>
          </div>
          <div class="movie-detail__info-item">
            <h2>Czas trwania</h2>
            <p><%= movie.runtime %> minut</p>
          </div>
        </div>
      </div>
    </div>
</div>



